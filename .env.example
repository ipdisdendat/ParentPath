# Database Configuration
# Option 1: SQLite (DEFAULT - zero setup, $0 cost)
DATABASE_URL=sqlite:///parentpath.db

# Option 2: PostgreSQL (production, requires Docker)
# DATABASE_URL=postgresql+asyncpg://parentpath:parentpath_dev_2024@localhost:5432/parentpath

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional, for Qdrant Cloud

# Gemini AI (REQUIRED - Get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Mode
# Option 1: CLI (DEFAULT - free tier, 1000 requests/day)
USE_GEMINI_CLI=true

# Option 2: API (production - paid tier, more reliable)
# USE_GEMINI_CLI=false

# WhatsApp Cloud API (Get from Meta Business)
WHATSAPP_PHONE_ID=your_phone_id
WHATSAPP_TOKEN=your_access_token

# Twilio (Alternative to WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# MinIO (S3-compatible storage)
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=parentpath

# Security
JWT_SECRET=your_random_secret_key_here_change_in_production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production

# Monitoring
SENTRY_DSN=  # Optional
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_MULTILINGUAL=true
ENABLE_GAMIFICATION=true
ENABLE_VOICE_MESSAGES=false

# Application
APP_ENV=development
LOG_LEVEL=INFO
